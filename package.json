    "@toast-ui/editor": "^3.2.1",
    "@toast-ui/react-editor": "^3.2.2",
    "@urql/exchange-request-policy": "^1.0.1",
    "blurhash": "^2.0.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "feed": "^4.2.2",
    "graphql": "^16.6.0",
    "highlight.js": "^11.7.0",
    "lexical": "^0.9.2",
    "marked": "^4.3.0",
