{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -m -c ./configs/tailwind.js -i ./styles/app.css -o ./app/styles/app.css",
    "codegen": "graphql-codegen --config configs/codegen.ts",
    "deploy": "wrangler publish",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -c ./configs/tailwind.js -i ./styles/app.css -o app/styles/app.css",
    "dev:miniflare": "wrangler dev",
    "dev:remix": "remix watch",
    "lint": "eslint app/"
  },
  "dependencies": {
    "@github/webauthn-json": "^2.0.2",
    "@heroicons/react": "^2.0.17",
    "@remix-run/cloudflare": "^2.0.1",
    "@remix-run/cloudflare-workers": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@urql/exchange-request-policy": "^1.0.1",
    "blurhash": "^2.0.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "feed": "^4.2.2",
    "graphql": "^16.8.1",
    "highlight.js": "^11.9.0",
    "iconoir-react": "^6.11.0",
    "marked": "^9.1.2",
    "react": "^18.2.0",
    "react-blurhash": "^0.3.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.16.0",
    "remix-auth": "^3.6.0",
    "remix-auth-github": "^1.6.0",
    "urql": "^4.0.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231010.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@remix-run/dev": "^2.0.1",
    "@remix-run/eslint-config": "^2.0.1",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/marked": "^6.0.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "wrangler": "^3.13.1",
    "yarn-audit-fix": "^10.0.1"
  },
  "engines": {
    "node": ">=14"
  }
