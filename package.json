{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "build:css": "tailwindcss -m -c ./configs/tailwind.js -i ./styles/app.css -o ./app/styles/app.css",
    "deploy": "wrangler publish",
    "dev": "remix build && run-p \"dev:*\"",
    "dev:css": "tailwindcss -w -c ./configs/tailwind.js -i ./styles/app.css -o app/styles/app.css",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev:remix": "remix watch",
    "lint": "eslint app/",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@github/webauthn-json": "^2.0.2",
    "@heroicons/react": "^2.0.13",
    "@lexical/react": "^0.7.6",
    "@remix-run/cloudflare": "^1.10.1",
    "@remix-run/cloudflare-workers": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "@toast-ui/editor": "^3.2.1",
    "@toast-ui/react-editor": "^3.2.2",
    "@urql/exchange-request-policy": "^1.0.0",
    "blurhash": "^2.0.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "feed": "^4.2.2",
    "graphql": "^16.6.0",
    "highlight.js": "^11.7.0",
    "lexical": "^0.7.6",
    "marked": "^4.2.7",
    "react": "^18.2.0",
    "react-blurhash": "^0.3.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.6.2",
    "urql": "^3.0.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@remix-run/dev": "^1.10.1",
    "@remix-run/eslint-config": "^1.10.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/marked": "^4.0.8",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "miniflare": "^2.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "yarn-audit-fix": "^9.3.7"
  },
  "engines": {
    "node": ">=14"
  }
}
