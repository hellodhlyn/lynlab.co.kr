{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "@remix-run/eslint-config",
    "airbnb-typescript"
  ],
  "rules": {
    "@typescript-eslint/quotes": [
      "error",
      "double"
    ]
  },
  "ignorePatterns": [
    "build/",
    "public/"
  ]
}
